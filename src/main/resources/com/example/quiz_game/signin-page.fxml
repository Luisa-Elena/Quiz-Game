    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label layoutX="373.0" layoutY="139.0" text="Please enter your credentials">
      <font>
         <Font size="20.0" />
      </font></Label>
    <Label layoutX="133.0" layoutY="236.0" text="Name: ">
      <font>
         <Font size="20.0" />
      </font></Label>
    <TextField fx:id="nameField" layoutX="238.0" layoutY="239.0" prefHeight="25.0" prefWidth="539.0" promptText="Enter your name" />
    <Label layoutX="107.0" layoutY="286.0" text="Password: ">
      <font>
         <Font size="20.0" />
      </font></Label>
    <TextField fx:id="passwordField" layoutX="238.0" layoutY="289.0" prefHeight="25.0" prefWidth="539.0" promptText="Enter password" />
    <Text fx:id="signInInfo" fill="#f5300e" layoutX="56.0" layoutY="337.0" wrappingWidth="538.5" />
