<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600" prefWidth="600" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quiz_game.controllers.SignInController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label layoutX="190.0" layoutY="171.0" text="Please enter your credentials">
      <font>
         <Font size="20.0" />
      </font></Label>
    <Label layoutX="74.0" layoutY="238.0" text="Name: ">
      <font>
         <Font size="20.0" />
      </font></Label>
    <TextField fx:id="nameField" layoutX="147.0" layoutY="240.0" prefHeight="25.0" prefWidth="396.0" promptText="Enter your name" />
    <Label layoutX="39.0" layoutY="285.0" text="Password: ">
      <font>
         <Font size="20.0" />
      </font></Label>
    <TextField fx:id="passwordField" layoutX="147.0" layoutY="288.0" prefHeight="25.0" prefWidth="396.0" promptText="Enter password" />
    <Text fx:id="signInInfo" fill="#f5300e" layoutX="56.0" layoutY="337.0" wrappingWidth="538.5" />
    <Button layoutX="46.0" layoutY="77.0" onAction="#onGoBackButtonClick" text="Go back" textFill="#000008" />
    <Button layoutX="276.0" layoutY="366.0" onAction="#onSignInButtonClick" text="Sign in">
      <font>
         <Font size="20.0" />
      </font></Button>
    <Button layoutX="480.0" layoutY="77.0" mnemonicParsing="false" onAction="#onCloseAppClick" text="Close App" />
</AnchorPane>
